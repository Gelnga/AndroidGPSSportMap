<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Image_buttons" parent="Widget.AppCompat.ImageButton">
        <item name="cornerRadius">5sp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:backgroundTint">@color/ui_button</item>
        <item name="android:tint">@color/dark_gray</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Buttons" parent="Widget.AppCompat.Button">
        <item name="cornerRadius">5sp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:backgroundTint">@color/ui_button</item>
        <item name="android:tint">@color/ui_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="Text_Views" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/creme</item>
    </style>

    <style name="Input_fields" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/creme</item>
    </style>
</resources>