<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sessionRowView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/layout_bg"
    android:clipToPadding="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingEnd="6dp"
    android:weightSum="6">

    <TextView
        android:id="@+id/textViewSessioName"
        style="@style/Text_Views"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewSessionSaveDate"
        style="@style/Text_Views"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButtonSessionView"
        style="@style/Image_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_view_session" />

    <ImageButton
        android:id="@+id/imageButtonSessionDelete"
        style="@style/Image_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_bin" />
</LinearLayout>