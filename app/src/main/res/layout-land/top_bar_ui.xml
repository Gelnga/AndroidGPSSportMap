<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:weightSum="10">

    <Button
        android:id="@+id/buttonTrack"
        style="@style/Buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:onClick="trackButtonOnClick"
        android:text="ON"
        android:textSize="10sp"
        app:iconSize="16dp"
        app:rippleColor="@color/ui_button" />

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Image_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:onClick="userProfileButtonOnClick"
        app:srcCompat="@drawable/ic_user_profile" />

    <ImageButton
        android:id="@+id/compassButton"
        style="@style/Image_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:onClick="compassButtonOnClick"
        app:srcCompat="@drawable/ic_compass_icon" />

    <ImageButton
        android:id="@+id/sessionsBoardButton"
        style="@style/Image_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:onClick="sessionsBoardButtonOnClick"
        app:srcCompat="@drawable/ic_3bars" />

</LinearLayout>